<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddToExistingBasket">


    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:background="@color/header">

        <sdi.com.currencywizard.views.TextViewGothamBook
            android:id="@+id/title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="Add to a Existing Basket"
            android:textSize="18dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />


        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/back"
            android:id="@+id/btnback"
            android:layout_alignTop="@+id/title_txt"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_below="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_title"
        android:layout_marginTop="20dp">

        <sdi.com.currencywizard.views.TextViewGothamMediumOtf
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#01506e"
            android:textSize="16dp"
            android:textStyle="bold"
            android:singleLine="true"
            android:id="@+id/existing_basket_title"
            android:background="@color/transparent_background"
            android:gravity="center_horizontal"
            inputType="textCapSentences"
            android:text="Title of the basket...."/>

        <View
            android:layout_width="match_parent"
            android:background="@color/divider"
            android:layout_height="1dp"
            android:layout_marginTop="30dp"/>

        <sdi.com.currencywizard.views.EditTextGothamMedium
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#8e8e8e"
            android:textStyle="bold"
            android:inputType="textCapSentences"
            android:id="@+id/add_a_note"
            android:background="@color/transparent_background"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:maxLength="80"
            android:hint="Add a Note"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </RelativeLayout>

    <sdi.com.currencywizard.views.ButtonGothamMedium
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20dp"
        android:id="@+id/update_btn"
        android:background="@color/background"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
