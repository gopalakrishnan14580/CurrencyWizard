<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddToNewBasket">


    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:background="@color/header">

        <sdi.com.currencywizard.views.TextViewGothamBook
            android:id="@+id/new_basket_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="@string/Add_to_a_New_Basket"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />


        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/back"
            android:id="@+id/new_basket_back"
            android:layout_alignTop="@+id/new_basket_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_below="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_title">

        <sdi.com.currencywizard.views.EditTextGothamMedium
            android:id="@+id/title_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/title"
            android:textSize="18dp"
            android:paddingTop="20dp"
            android:layout_marginLeft="20dp"
            android:background="@color/transparent_background"
            android:textStyle="bold"
            android:inputType="textCapSentences"
            android:maxLength="40"
            android:hint="Title"
            android:textColorHint="@color/title"/>

        <TextView
            android:layout_below="@+id/title_et"
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:background="@color/divider"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
             />

        <sdi.com.currencywizard.views.EditTextGothamMedium
            android:layout_below="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/add_a_note"
            android:textStyle="bold"
            android:inputType="textCapSentences"
            android:background="@color/transparent_background"
            android:id="@+id/add_a_note_et"
            android:maxLength="80"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:hint="@string/Add_a_Note"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </RelativeLayout>

    <sdi.com.currencywizard.views.ButtonGothamMedium
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20dp"
        android:id="@+id/create_btn"
        android:background="@color/background"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
